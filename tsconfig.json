{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6", "DOM"],
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "declarationDir": "./build",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "typeRoots": ["./src/typings", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/__test__"]
}
